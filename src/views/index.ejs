<body>

    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload files</a>
    </div>

    <div>
        <div class="w3-container">
            <h2>List users Table</h2>
            <form action="/create-user" method="get">
                <button type="submit" class="btn btn-success">Create New</button>
            </form>
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td style="display: flex; gap: 15px;">
                                <form>
                                    <button type="button"><a style="color: black;"
                                            href="/detail/user/<%= dataUser[i].id %>">Details</a>
                                    </button>
                                </form>
                                <!-- target="_blank" -->
                                <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-user" method="post">
                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>

            </table>
        </div>
